@{
    ViewData["Title"] = "Gummidom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model  Gummidom.Models.Product

<html>
<head>
    <title>Gummidom Products - Create</title>
</head>
<body>
    <h2>Create</h2>
    <hr />
    <h4>Add a new product</h4>


    <div class="form-group">
        @using (Html.BeginForm())
        {   
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name)

            @Html.LabelFor(model => model.Cost)
            @Html.TextBoxFor(model => model.Cost)

            @Html.LabelFor(model => model.CountryOfOrigin)
            @Html.TextBoxFor(model => model.CountryOfOrigin)

            <input type="submit" value="Add this product" />       
        }
        </div>

    <p>@Html.ActionLink("Back to list", "Index")</p>

</body>
</html>